doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Bloom
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/style.css")
        script(src="https://kit.fontawesome.com/053fb83854.js" crossorigin="anonymous")
        script(src="/socket.io/socket.io.js" defer)
        script(src="/public/js/chat.js" defer)
    body
        header  
            h1 Bloom
        main 
            div#welcome 
                form
                    input(placeholder="방 이름을 입력해주세요.", required, type="text")
                    button 입장
            div#nickname
                form#nickForm
                    input(placeholder="닉네임을 입력해주세요.", required, type="text")
                    button 저장
            div#call
                h3#roomTitle
                div#content
                    div#video-wrap
                        div#myStream(class="video-view")
                            video#myFace(autoplay, playsinline, width="400", height="400")
                            div#stream-button
                                button#mute
                                    i(class="fa-solid fa-volume-xmark")
                                button#camera
                                    i(class="fa-solid fa-video-slash")
                            select#cameras
                                option(value="device") Face Camera
                        div#peersStream(class="video-view")
                            video#peerFace(autoplay, playsinline, width="400", height="400")
                    div#chat
                        ul
                        form#chatForm
                            input(type="text", required, placeholder="메시지를 입력하세요.")
                            button 전송 